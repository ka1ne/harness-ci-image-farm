# Harness CI Factory Secrets Configuration
# IMPORTANT: Copy this file to 'secrets.yaml' and fill in your actual values
# Do NOT commit secrets.yaml to version control - add it to .gitignore

global:
  harness:
    secrets:
      # Your Harness account ID from the Harness platform
      accountId: "YOUR_HARNESS_ACCOUNT_ID" 
      # API Key with appropriate permissions
      apiKey: "YOUR_HARNESS_API_KEY"
      # Name of the secret in Harness that holds the API key
      apiKeySecret: "YOUR_HARNESS_API_KEY_SECRET_NAME"

# When using Terraform, these values correspond to:
# - accountId: harness_platform_account in terraform.tfvars
# - apiKey: harness_platform_key in terraform.tfvars
# - apiKeySecret: harness_api_key_secret in terraform.tfvars

# To use this file when installing/upgrading the Helm chart:
# helm upgrade --install harness-ci-factory ./helm/harness-ci-factory -f my-values.yaml -f secrets.yaml 